<%= content_tag :div, id: "like_#{user.id}" do %>
  <h4><%= user.likers(User).count %> likes</h4>

  <% if current_user %>
    <% unless current_user.likes?(user) %>
      <%= link_to 'Like', likes_path(user), remote: true, class: 'tiny button radius' %>
    <% end %>
  <% else %>
    <%= link_to 'Like', signin_path, class: 'tiny button radius' %>
  <% end %>

<% end %>
